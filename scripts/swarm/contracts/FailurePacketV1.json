{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "FailurePacketV1",
  "description": "Written on any exception for diagnosis swarm",
  "type": "object",
  "required": ["version", "runId", "step", "errorName", "errorMessage", "timestampIso"],
  "properties": {
    "version": {
      "type": "string",
      "const": "failure_packet.v1"
    },
    "runId": {
      "type": "string",
      "description": "Unique identifier for the run that failed"
    },
    "intakeId": {
      "type": "integer",
      "description": "Intake ID if available"
    },
    "step": {
      "type": "string",
      "description": "Which step failed",
      "examples": ["preflight", "enqueue", "executeRunPlan", "smoke_test"]
    },
    "errorName": {
      "type": "string",
      "description": "Error constructor name",
      "example": "TypeError"
    },
    "errorMessage": {
      "type": "string",
      "description": "Error message"
    },
    "stack": {
      "type": "string",
      "description": "Stack trace if available"
    },
    "timestampIso": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp"
    },
    "context": {
      "type": "object",
      "description": "Snapshot of relevant context at time of failure",
      "properties": {
        "tier": {
          "type": "string",
          "enum": ["standard", "growth", "premium"]
        },
        "preflightStatus": {
          "type": "string",
          "enum": ["PASS", "NEEDS_INFO", "BLOCKED"]
        },
        "creditsRemaining": {
          "type": "integer"
        }
      }
    }
  }
}
