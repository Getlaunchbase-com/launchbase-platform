{
  "version": "pageplan.v1",
  "id": "pricing.pageplan.v1",
  "page": "pricing",
  "route": "/pricing",
  "title": "Pricing",
  "meta": {
    "description": "Choose a LaunchBase tier. See what’s included, what add-ons are available, and how revisions/credits work.",
    "ogTitle": "LaunchBase Pricing",
    "ogDescription": "Standard, Growth, Premium — pick the tier that fits your business."
  },
  "constraints": {
    "builderSurface": "pricing_ui",
    "allowedPaths": [
      "client/src/pages/Pricing.tsx",
      "client/src/components/marketing/**",
      "client/src/styles/**"
    ],
    "forbiddenPaths": [
      "server/**",
      "drizzle/**",
      "package.json",
      "client/src/pages/Portal.tsx",
      "client/src/components/auth/**"
    ],
    "allowedComponents": [
      "Section",
      "Container",
      "Heading",
      "Text",
      "Badge",
      "Divider",
      "Card",
      "Button",
      "Link"
    ],
    "designSystemContractPath": "docs/premium_design_system_patchlist.md",
    "ctaRules": {
      "singlePrimaryCtaPerViewportRegion": true,
      "primaryCtaTextMustMatchOneOf": ["Start", "Get started", "Choose plan", "Continue"],
      "secondaryCtaAllowed": true,
      "noDualPrimaryCtas": true
    }
  },
  "truthRules": {
    "noInventedClaims": true,
    "noTestimonialsUnlessProvided": true,
    "pricingMustMatchTierDefinitions": true,
    "featuresMustBeTierAccurate": true
  },
  "acceptanceGates": {
    "mobile": {
      "viewport": "390x844",
      "mustPass": [
        "Only 1 primary CTA visible in hero region",
        "Primary CTA visible by 20% scroll",
        "Pricing cards stack vertically (no horizontal scroll)",
        "No text overlaps or clipped buttons",
        "Touch targets minimum 44x44px"
      ]
    },
    "designSystem": {
      "mustPass": [
        "H1 appears exactly once on page",
        "Heading hierarchy never skips levels (H1→H2→H3)",
        "Section padding consistent (no random spacing)",
        "Button variants consistent across sections"
      ]
    },
    "truth": {
      "mustPass": [
        "No invented performance claims",
        "Credits/revisions described accurately per tier",
        "Add-ons described as optional and require connections"
      ]
    }
  },
  "sections": [
    {
      "id": "pricing-hero",
      "type": "hero",
      "components": ["Badge", "Heading", "Text", "Button", "Link"],
      "content": {
        "badge": "Pricing",
        "h1": "Pick a tier. Get a site that’s ready to ship.",
        "subheadline": "Standard is a polish pass. Growth adds conversion improvements. Premium is a full UI transformation with Builder execution.",
        "primaryCta": { "text": "Choose plan", "href": "#plans" },
        "secondaryCta": { "text": "How it works", "href": "/how-it-works" }
      },
      "layout": {
        "sectionPadding": "py-16 desktop / py-12 mobile",
        "maxWidth": "container",
        "heroAlignment": "left",
        "notes": [
          "Primary CTA must be visible above the fold on mobile.",
          "Avoid multiple competing CTAs in hero."
        ]
      }
    },
    {
      "id": "tier-plans",
      "type": "pricing_cards",
      "anchor": "plans",
      "components": ["Section", "Container", "Card", "Heading", "Text", "Button", "Divider", "Badge"],
      "content": {
        "h2": "Plans",
        "intro": "Choose the tier that matches how much change you want.",
        "cards": [
          {
            "tier": "standard",
            "label": "Standard",
            "badge": "Polish pass",
            "summary": "Tighten messaging, improve hierarchy, clearer CTA.",
            "includedCredits": 1,
            "loops": "1 initial loop",
            "builder": "No (showroom preview only)",
            "highlights": [
              "Messaging cleanup",
              "Spacing + hierarchy improvements",
              "CTA clarity"
            ],
            "primaryCta": { "text": "Choose Standard", "href": "/intake?tier=standard" }
          },
          {
            "tier": "growth",
            "label": "Growth",
            "badge": "Conversion pass",
            "summary": "Everything in Standard plus trust + proof improvements.",
            "includedCredits": 3,
            "loops": "2–3 initial loops",
            "builder": "No (showroom preview only)",
            "highlights": [
              "Trust strip + proof elements",
              "Outcome bullets + clarity improvements",
              "More iteration loops"
            ],
            "primaryCta": { "text": "Choose Growth", "href": "/intake?tier=growth" }
          },
          {
            "tier": "premium",
            "label": "Premium",
            "badge": "Full transformation",
            "summary": "Premium positioning + design system + strongest hierarchy.",
            "includedCredits": 10,
            "loops": "5–10 initial loops",
            "builder": "Yes (UI execution allowed on marketing surfaces)",
            "highlights": [
              "Design system consistency",
              "Premium layout + positioning",
              "Builder execution + pressure testing"
            ],
            "primaryCta": { "text": "Choose Premium", "href": "/intake?tier=premium" }
          }
        ],
        "notes": [
          "Do NOT invent dollar prices unless provided elsewhere.",
          "If you do have pricing numbers in repo, wire them in from constants—don’t hardcode."
        ]
      },
      "layout": {
        "cardsLayout": "3-up desktop, 1-up mobile",
        "cardPadding": "p-6 desktop / p-4 mobile",
        "cardRadius": "16px",
        "notes": [
          "Cards must stack vertically on mobile with no horizontal scroll.",
          "Each card has exactly one primary CTA button."
        ]
      }
    },
    {
      "id": "credits-explainer",
      "type": "explainers",
      "components": ["Section", "Container", "Heading", "Text", "Card", "Divider"],
      "content": {
        "h2": "Revisions & credits",
        "bullets": [
          "Each “Request changes” consumes 1 credit.",
          "“Approve” consumes 0 credits.",
          "When credits run out, you can buy more."
        ],
        "finePrint": "Credits limit iteration so the process stays fast and focused.",
        "guardrails": [
          "No unlimited back-and-forth.",
          "Every loop is pressure-tested before it’s shown as ready."
        ]
      }
    },
    {
