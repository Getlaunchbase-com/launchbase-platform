          },
          {
            "id": "engine-ads",
            "name": "Ads Engine",
            "tagline": "Turn intent into booked calls.",
            "pricing": { "setupLabel": "Setup", "setupValue": "Quoted", "careLabel": "Care", "careValue": "From $/mo" },
