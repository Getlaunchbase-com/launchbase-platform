{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Critique",
  "description": "AI critic evaluation of proposals (AI tennis round)",
  "type": "object",
  "required": ["schemaVersion", "pass", "issues", "suggestedFixes", "confidence", "requiresApproval"],
  "additionalProperties": false,
  "properties": {
    "schemaVersion": {
      "type": "string",
      "const": "v1",
      "description": "Schema version for safe migrations"
    },
    "pass": {
      "type": "boolean",
      "description": "True if proposal meets quality standards"
    },
    "issues": {
      "type": "array",
      "description": "Top 3 issues found in proposal",
      "items": {
        "type": "object",
        "required": ["severity", "description", "affectedKey"],
        "additionalProperties": false,
        "properties": {
          "severity": {
            "type": "string",
            "enum": ["critical", "major", "minor"],
            "description": "Issue severity level"
          },
          "description": {
            "type": "string",
            "maxLength": 200,
            "description": "What the issue is"
          },
          "affectedKey": {
            "type": "string",
            "description": "Which key has the issue (if applicable)"
          }
        }
      },
      "maxItems": 3
    },
    "suggestedFixes": {
      "type": "array",
      "description": "Minimal fixes to address issues",
      "items": {
        "type": "object",
        "required": ["targetKey", "fix", "rationale"],
        "additionalProperties": false,
        "properties": {
          "targetKey": {
            "type": "string",
            "description": "Key to fix"
          },
          "fix": {
            "type": "string",
            "maxLength": 200,
            "description": "Suggested minimal fix"
          },
          "rationale": {
            "type": "string",
            "maxLength": 150,
            "description": "Why this fix helps"
          }
        }
      },
      "maxItems": 3
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "Confidence in critique accuracy"
    },
    "requiresApproval": {
      "type": "boolean",
      "const": true,
      "description": "Must always be true"
    },
    "evaluationCriteria": {
      "type": "object",
      "additionalProperties": false,
      "description": "Scores for specific criteria",
      "properties": {
        "clarity": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "trust": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "scanability": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "mobileFold": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "sectionContractCompliance": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        }
      }
    }
  }
}
